<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="secure.ccavenue.com" type="host">secure.ccavenue.com</value>
                <value id="test.ccavenue.com" type="host">test.ccavenue.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="qasecure.ccavenue.com" type="host">qasecure.ccavenue.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="secure.ccavenue.com" type="host">secure.ccavenue.com</value>
                <value id="test.ccavenue.com" type="host">test.ccavenue.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
